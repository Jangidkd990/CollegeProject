@model TradeBridge.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-home me-2"></i>Welcome to TradeBridge</h4>
                </div>
                <div class="card-body">
                    <h2 class="card-title">Project for Reporting, Intelligence & Strategic Management</h2>
                    <p class="card-text">
                        TradeBridge provides a comprehensive solution for managing ConverDyn's commercial operations including customers, 
                        suppliers, contracts, bearings, transportation, and financial planning.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small">Active Contracts</div>
                            <div class="text-lg fw-bold">@Model.ActiveContractCount</div>
                        </div>
                        <i class="fas fa-file-contract fa-2x text-white-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Contracts" asp-action="Index">View Contracts</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small">Planned Deliveries</div>
                            <div class="text-lg fw-bold">@Model.PlannedDeliveryCount</div>
                        </div>
                        <i class="fas fa-truck fa-2x text-white-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Transportation" asp-action="Index">View Transportation</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small">Bearings Inventory</div>
                            <div class="text-lg fw-bold">53</div>
                        </div>
                        <i class="fas fa-cog fa-2x text-white-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Bearings" asp-action="Index">View Bearings</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small">Customers & Suppliers</div>
                            <div class="text-lg fw-bold">@(Model.CustomerCount + Model.SupplierCount)</div>
                        </div>
                        <i class="fas fa-users fa-2x text-white-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Customers" asp-action="Index">View Customers</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bearings Stats -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-dark-75 small">Bearing Categories</div>
                            <div class="text-lg fw-bold">8</div>
                        </div>
                        <i class="fas fa-tags fa-2x text-dark-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-dark stretched-link" asp-controller="Bearings" asp-action="Categories">View Categories</a>
                    <div class="small text-dark"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small">Low Stock Items</div>
                            <div class="text-lg fw-bold">12</div>
                        </div>
                        <i class="fas fa-exclamation-triangle fa-2x text-white-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Bearings" asp-action="LowStock">View Low Stock</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Customer Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage customer profiles, contracts, and delivery forecasts.</p>
                    <ul>
                        <li>Customer Profiles (@Model.CustomerCount total)</li>
                        <li>Contract Management (@Model.ContractCount total)</li>
                        <li>Delivery Scheduling</li>
                        <li>Revenue Tracking</li>
                    </ul>
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-outline-success">Go to Customers</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-file-contract me-2"></i>Contract Module</h5>
                </div>
                <div class="card-body">
                    <p>Centralized contract repository with comprehensive pricing and quantity tracking.</p>
                    <ul>
                        <li>Master Contract Repository</li>
                        <li>Multiple Pricing Types</li>
                        <li>Commitment Quantities</li>
                        <li>Contract Document Upload</li>
                    </ul>
                    <a asp-controller="Contracts" asp-action="Index" class="btn btn-outline-info">Go to Contracts</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Bearings Inventory</h5>
                </div>
                <div class="card-body">
                    <p>Comprehensive bearing inventory management system.</p>
                    <ul>
                        <li>Bearing Catalog Management</li>
                        <li>Stock Tracking</li>
                        <li>Specifications & Documentation</li>
                        <li>Usage Analysis</li>
                    </ul>
                    <div class="row">
                        <div class="col-6">
                            <a asp-controller="Bearings" asp-action="Index" class="btn btn-outline-warning w-100">Inventory</a>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Bearings" asp-action="Categories" class="btn btn-outline-warning w-100">Categories</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Transportation & Logistics</h5>
                </div>
                <div class="card-body">
                    <p>Manage delivery planning across multiple facilities (@Model.LocationCount locations) with forecasted shipping rates.</p>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-controller="Transportation" asp-action="Index" class="btn btn-outline-secondary">Transportation Plans</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-controller="Transportation" asp-action="ShippingRates" class="btn btn-outline-secondary">Shipping Rates</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Bearing Specifications</h5>
                </div>
                <div class="card-body">
                    <p>Manage technical specifications and documentation for bearings inventory.</p>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-controller="Bearings" asp-action="Specifications" class="btn btn-outline-danger">Specifications</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-controller="Bearings" asp-action="Create" class="btn btn-outline-danger">Add Bearing</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
