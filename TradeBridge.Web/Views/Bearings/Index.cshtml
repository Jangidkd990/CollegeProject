@{
    ViewData["Title"] = "Bearings Inventory";
}

<div class="container-fluid">
    <h1 class="mt-4">Bearings Inventory</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Bearings Inventory</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-cog me-1"></i>
                Bearings Inventory
            </div>
            <div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add New Bearing
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="bearingsTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Part Number</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>In Stock</th>
                            <th>Location</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample data for demonstration -->
                        <tr>
                            <td>1</td>
                            <td>BRG-001</td>
                            <td>Ball Bearing - Single Row</td>
                            <td>Ball Bearings</td>
                            <td>42</td>
                            <td>Warehouse A</td>
                            <td>$24.99</td>
                            <td>
                                <a asp-action="Details" asp-route-id="1" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="1" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="1" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>BRG-002</td>
                            <td>Spherical Roller Bearing</td>
                            <td>Roller Bearings</td>
                            <td>18</td>
                            <td>Warehouse B</td>
                            <td>$56.75</td>
                            <td>
                                <a asp-action="Details" asp-route-id="2" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="2" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="2" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>BRG-003</td>
                            <td>Tapered Roller Bearing</td>
                            <td>Roller Bearings</td>
                            <td>7</td>
                            <td>Warehouse A</td>
                            <td>$89.50</td>
                            <td>
                                <a asp-action="Details" asp-route-id="3" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="3" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="3" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#bearingsTable').DataTable();
        });
    </script>
} 