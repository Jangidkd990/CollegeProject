@model PRISM.Core.Entities.Transportation.TransportationPlan

@{
    ViewData["Title"] = "Delete Transportation Plan";
}

<div class="container-fluid">
    <h1 class="mt-4">Delete Transportation Plan</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Transportation Plans</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete - @Model.PlanNumber</li>
        </ol>
    </nav>

    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning:</strong> Are you sure you want to delete this transportation plan? This action cannot be undone.
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-truck me-1"></i>
                    Transportation Plan Details
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Plan Number</dt>
                                <dd class="col-sm-8">@Model.PlanNumber</dd>

                                <dt class="col-sm-4">Date Range</dt>
                                <dd class="col-sm-8">@Model.StartDate.ToString("d") - @Model.EndDate.ToString("d")</dd>

                                <dt class="col-sm-4">Origin</dt>
                                <dd class="col-sm-8">@Model.OriginLocation?.Name</dd>

                                <dt class="col-sm-4">Destination</dt>
                                <dd class="col-sm-8">@Model.DestinationLocation?.Name</dd>

                                <dt class="col-sm-4">Carrier</dt>
                                <dd class="col-sm-8">@Model.Carrier</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Transport Mode</dt>
                                <dd class="col-sm-8">@Model.TransportMode</dd>

                                <dt class="col-sm-4">Total Quantity</dt>
                                <dd class="col-sm-8">@Model.TotalQuantity.ToString("N2")</dd>

                                <dt class="col-sm-4">Total Estimated Cost</dt>
                                <dd class="col-sm-8">@Model.TotalEstimatedCost.ToString("C2")</dd>

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">@Model.Status</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex">
                            <button type="submit" class="btn btn-danger me-2">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 