@model PRISM.Core.Entities.Transportation.ShippingRate

@{
    ViewData["Title"] = "Delete Shipping Rate";
}

<div class="container-fluid">
    <h1 class="mt-4">Delete Shipping Rate</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="ShippingRates">Shipping Rates</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Rate</li>
        </ol>
    </nav>

    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning:</strong> Are you sure you want to delete this shipping rate? This action cannot be undone.
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-dollar-sign me-1"></i>
                    Shipping Rate Details
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Origin</dt>
                                <dd class="col-sm-8">@Model.OriginLocation?.Name</dd>

                                <dt class="col-sm-4">Destination</dt>
                                <dd class="col-sm-8">@Model.DestinationLocation?.Name</dd>

                                <dt class="col-sm-4">Transport Mode</dt>
                                <dd class="col-sm-8">@Model.TransportMode</dd>

                                <dt class="col-sm-4">Carrier</dt>
                                <dd class="col-sm-8">@Model.Carrier</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Effective Date</dt>
                                <dd class="col-sm-8">@Model.EffectiveDate.ToString("d")</dd>

                                <dt class="col-sm-4">Expiration Date</dt>
                                <dd class="col-sm-8">
                                    @if (Model.ExpirationDate.HasValue)
                                    {
                                        @Model.ExpirationDate.Value.ToString("d")
                                    }
                                    else
                                    {
                                        <span>No expiration</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Base Rate</dt>
                                <dd class="col-sm-8">@Model.BaseRate.ToString("C2")</dd>

                                <dt class="col-sm-4">Total Rate</dt>
                                <dd class="col-sm-8">@Model.CalculateTotalRate().ToString("C2")</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="DeleteRate" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex">
                            <button type="submit" class="btn btn-danger me-2">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="ShippingRates" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 