@model PRISM.Core.Entities.Forecasting.Forecast

@{
    ViewData["Title"] = "Delete Forecast";
}

<div class="container-fluid">
    <h1 class="mt-4">Delete Forecast</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Forecasts</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this forecast? This action cannot be undone and will delete all forecast details associated with this forecast.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash me-1"></i>
            Confirm Delete: @Model.Title
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>
                        
                        <dt class="col-sm-4">Forecast Date</dt>
                        <dd class="col-sm-8">@Model.ForecastDate.ToString("d")</dd>
                        
                        <dt class="col-sm-4">Period Type</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PeriodType)</dd>
                        
                        <dt class="col-sm-4">Forecast Type</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Approval Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-success">Approved</span>
                                <span class="ms-2">by @Model.ApprovedBy on @Model.ApprovalDate?.ToString("g")</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending Approval</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Created By</dt>
                        <dd class="col-sm-8">@Model.CreatedBy on @Model.CreatedDate.ToString("g")</dd>
                    </dl>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-12">
                    <h5>Description</h5>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete Permanently
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div> 