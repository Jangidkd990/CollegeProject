@model PRISM.Core.Entities.Forecasting.ForecastDetail

@{
    ViewData["Title"] = "Add Forecast Detail";
}

<div class="container-fluid">
    <h1 class="mt-4">Add Forecast Detail</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Forecasts</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@ViewBag.ForecastId">@ViewBag.ForecastTitle</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add Detail</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus me-1"></i>
            Add Detail to Forecast: @ViewBag.ForecastTitle
        </div>
        <div class="card-body">
            <form asp-action="AddDetail">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ForecastId" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PeriodStart" class="form-label">Period Start Date</label>
                            <input asp-for="PeriodStart" class="form-control" type="date" />
                            <span asp-validation-for="PeriodStart" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PeriodEnd" class="form-label">Period End Date</label>
                            <input asp-for="PeriodEnd" class="form-control" type="date" />
                            <span asp-validation-for="PeriodEnd" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ForecastValue" class="form-label">Forecast Value</label>
                            <input asp-for="ForecastValue" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ForecastValue" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ContractId" class="form-label">Contract (Optional)</label>
                            <select asp-for="ContractId" asp-items="ViewBag.Contracts" class="form-select">
                                <option value="">-- None --</option>
                            </select>
                            <span asp-validation-for="ContractId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="CustomerId" class="form-label">Customer (Optional)</label>
                            <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-select">
                                <option value="">-- None --</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ActualValue" class="form-label">Actual Value (Optional)</label>
                            <input asp-for="ActualValue" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ActualValue" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ActualDate" class="form-label">Actual Date (Optional)</label>
                            <input asp-for="ActualDate" class="form-control" type="date" />
                            <span asp-validation-for="ActualDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Add Detail
                    </button>
                    <a asp-action="Details" asp-route-id="@ViewBag.ForecastId" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Initialize any JavaScript needed for your form
        });
    </script>
} 